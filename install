#!/bin/sh

cd "$(dirname "$0")" || exit

for conf in $(exec find home/* config/* local/* -type f)
do
    case "$conf" in
        home/*)
            ln -snfv "$PWD"/"$conf" ~/."$(basename "$conf")"
            ;;
        *)
            mkdir -p ~/."$(dirname "$conf")"
            ln -snfv "$PWD"/"$conf" ~/."$conf"
            ;;
    esac
done
