# Disable touchpad
LIST='TM3381-002 Touchpad'
for NAME in $LIST
do
	NUM=$(xinput | grep $NAME | cut -d '=' -f 2 | cut -d '[' -f 1)
	if [ ! $NUM = '' ]; then
		xinput set-prop $NUM "Device Enabled" 0 &
	fi
done

# Caps is also Ctrl
setxkbmap -option "ctrl:nocaps" &

# Start fcitx-mozc
fcitx-autostart &

# Start compositor
picom -bc --config ~/.picom.conf

# Start file manager as a daemon
thunar --daemon &

# Apply screen layouts
if [ -f ~/.screen ]; then
    sh ~/.screen
fi

# Set wallpaper and color scheme
wal -qR &

# Start polybar
polybar-wal &
